
<% layout('../view/layouts/boilerplate') -%>

    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <h2>Create a New Listing</h2>
                <!-- Add 'was-validated' class here -->
                <form method="POST" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" placeholder="Title" name="listing[title]" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">Title is required</div> <!-- Add feedback message -->
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" placeholder="Description" name="listing[description]"
                            class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>

                        <div class="invalid-feedback">Description is required</div> <!-- Add feedback message -->
                    </div>


                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing image</label>
                        <input type="file" id="image" name="listing[image]"
                            class="form-control"> 
                        <div class="valid-feedback">
                            Looks good!
                        </div>

                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" id="price" placeholder="Price" name="listing[price]" min="0"
                                step="0.01" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">Price is required</div> <!-- Add feedback message -->
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" placeholder="Country" name="listing[country]"
                                class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">Country is required</div> <!-- Add feedback message -->
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" placeholder="Location" name="listing[location]"
                            class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">Location is required</div> <!-- Add feedback message -->
                    </div>

                    <button type="submit" class="btn mb-3 btn-dark">Submit</button>
                </form>
            </div>
        </div>

        <script>
            // JavaScript for Bootstrap validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')


                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        </script>

    </body>